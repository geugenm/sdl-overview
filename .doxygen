# Doxyfile for My C++ Project

# Set the project name and version
PROJECT_NAME           = My C++ Project
PROJECT_NUMBER         = 1.0

# Set the input and output directories
INPUT                  = src
OUTPUT_DIRECTORY       = docs

# Specify which files should be included in the documentation
FILE_PATTERNS          = *.cpp *.h *.cxx *.hxx

# Enable some useful output formats
GENERATE_HTML          = YES
GENERATE_LATEX         = NO

# Specify some useful settings for HTML output
HTML_OUTPUT            = html
HTML_FILE_EXTENSION    = .html
GENERATE_SINGLE_HTML = YES

# Specify some useful settings for LaTeX output
LATEX_OUTPUT           = latex
LATEX_FILE_EXTENSION   = .tex
LATEX_EXTRA_FILES      =

# Specify some useful settings for PDF output
PDF_OUTPUT             = pdf
PDF_HYPERLINKS         = YES
PDF_EXTRA_FILES        =

# Specify some useful settings for CHM output
GENERATE_CHM           = NO

# Specify some useful settings for RTF output
GENERATE_RTF           = NO

# Enable some useful features
USE_MDFILE_AS_MAINPAGE = README.md
QUIET                  = YES
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES
