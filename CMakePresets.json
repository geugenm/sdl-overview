{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Debug",
      "displayName": "Debug",
      "description": "Debug build with assertions and debug info.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-O0 -g -Wall",
        "CMAKE_C_FLAGS": "-O0 -g -Wall"
      }
    },
    {
      "name": "Release",
      "displayName": "Release",
      "description": "Release build with optimizations and without assertions.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-O3 -DNDEBUG",
        "CMAKE_C_FLAGS": "-O3 -DNDEBUG"
      }
    }
  ]
}
